<div class="container">
     <div class="row">
          <div class="col-xs-12">
               <div class="text-center">
                    <img id="burgerLogo" src="/assets/images/burger-logo.png">
               </div>
          </div>
     </div>
</div>

<div class="container">
  <div class="row">

    <div class="col-sm-4 col-xs-12">
      <h2>The Menu</h2>
      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              {{this.burger_name}}
              <form action="burgers/update/devour/{{this.id}}?_method=PUT" method="POST">
                <button class="btn btn-primary btn-block" type="submit">Eat Da Burger!</button>
              </form>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-sm-4 col-xs-12">
      <h2>Add a Burger</h2>
      <form class="create-form" action="burgers/create" method="POST">
        <div class="form-group">
          <label for="burgerName">Burger Name:</label>
          <input type="text" name="name" id="burgerName" value="">
        </div>
        <button type="button" class="btn btn-primary btn-block" type="submit">Add Burger</button>
      </form>
    </div>

    <div class="col-sm-4 col-xs-12">
      <h2>Devoured Burgers</h2>
      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li class="text-center" id="devouredBurgers">{{this.burger_name}}</li>
          {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>
</div>
